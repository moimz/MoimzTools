printWidth: 120
tabWidth: 4
useTabs: false

semi: true
singleQuote: true
quoteProps: 'preserve'
jsxSingleQuote: true
trailingComma: 'es5'
bracketSpacing: true
bracketSameLine: false
arrowParens: 'always'
endOfLine: 'lf'

overrides:
    - files: '*.html'
      options:
          parser: 'php'
          printWidth: 10000
